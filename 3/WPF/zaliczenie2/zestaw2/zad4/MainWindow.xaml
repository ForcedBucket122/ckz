<Window x:Class="zad4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad4"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="500">
    <StackPanel Orientation="Vertical">
        <CheckBox Content="Delete everything" Margin="5" x:Name="Usun"/>
        <Button Content="Delete" Margin="5" Click="usun"/>
        <TextBox Margin="5" Text="Here is some text to edit" Foreground="#808080" x:Name="output"/>
    </StackPanel>
</Window>
