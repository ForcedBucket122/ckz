<Window x:Class="zadania_cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zadania_cs"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <StackPanel Orientation="Vertical">
        
        <TextBlock FontSize="20">Podaj pojemność baku:</TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="pojemnosc" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>

        <TextBlock FontSize="20">Podaj ilość kilometrów:</TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="do_przebycia" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Oblicz zużycie paliwa" Click="buttonClick"/>
        </StackPanel>
        <TextBlock Text="Liczba km, którą samochód może przejechac na 1 litrze paliwa to: " FontSize="16"/>
        <TextBlock x:Name="output"/>
    </StackPanel>
</Window>
