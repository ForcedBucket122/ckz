<Window x:Class="Zestaw11Zad6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zestaw11Zad6"
        mc:Ignorable="d"
        Background="Purple"
        Title="MainWindow" Height="700" Width="500">
    <StackPanel Name="window">
        <DockPanel>
            <TextBlock FontSize="40" Background="MidnightBlue" Foreground="White" Padding="10">GALERIA</TextBlock></DockPanel>
        
        <DockPanel Margin="10">
            <Image Name="zdjecie" Width="400" Height="400" Source="/john1.jpg"></Image>
        </DockPanel>

        <DockPanel HorizontalAlignment="Center">
            <Button FontSize="24" Background="MidnightBlue" Foreground="White" Padding="10" Width="200" Margin="10" Click="Prev">PREV</Button>
            <Button FontSize="24" Background="MidnightBlue" Foreground="White" Padding="10" Width="200" Margin="10" Click="Next">NEXT</Button>
        </DockPanel>

        <DockPanel>
            <TextBlock FontSize="20" Margin="10">Który obraz wyświetlić?</TextBlock>
            <TextBox Name="NumerZdjecia" Margin="10" TextChanged="ZmienZdjecie"></TextBox>
        </DockPanel>

        <DockPanel HorizontalAlignment="Center">
            <TextBlock FontSize="20" Margin="10">Tło fioletowe</TextBlock>
            <RadioButton Name="radio" HorizontalAlignment="Center" Margin="10" Click="ZmienTlo"></RadioButton>
            <TextBlock FontSize="20" Margin="10">Tło zielone</TextBlock>
        </DockPanel>
    </StackPanel>
</Window>
