<Window x:Class="zad1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad1"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="250">
    <StackPanel>
        
        <Button Content="Wpisz swoje dane" Width="100" Click="wpisz"/>
        <TextBlock Text="Nie podałeś jeszcze swojego imienia" Margin="0 50 0 0" TextAlignment="Center" x:Name="imie"/>
    </StackPanel>
</Window>
