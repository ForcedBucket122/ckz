<Window x:Class="zad4.AnswerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad4"
        mc:Ignorable="d"
        Title="AnswerWindow" Height="450" Width="800">
    <Grid>
        <!-- Pole tekstowe do wpisania odpowiedzi -->
        <TextBox Name="AnswerTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" 
                 Width="200" Height="30" Margin="10"/>

        <!-- Przycisk Ok -->
        <Button Content="Ok" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                Width="100" Height="30" Margin="10" Click="OkButton_Click"/>

        <!-- Przycisk Cancel -->
        <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Width="100" Height="30" Margin="10" Click="CancelButton_Click"/>
    </Grid>
</Window>
