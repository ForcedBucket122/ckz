<Window x:Class="zad5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad5"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <!-- Lista imion -->
        <ListBox Name="NamesListBox" 
                 HorizontalAlignment="Left" 
                 VerticalAlignment="Top" 
                 Width="200" Height="100" 
                 Margin="10">
            <ListBoxItem>Monika</ListBoxItem>
            <ListBoxItem>Adam</ListBoxItem>
            <ListBoxItem>Wojciech</ListBoxItem>
        </ListBox>

        <!-- Przycisk potwierdzający wybór -->
        <Button Content="Zatwierdź" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Bottom" 
                Width="200" Height="30" 
                Margin="10" 
                Click="Button_Click"/>
    </Grid>
</Window>
