<Window x:Class="zad7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad7"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="Auto">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Plik">
                <MenuItem Header="Otwórz" x:Name="menuPlikOtworz" Click="menuPlikOtworzPlik"/>
                <MenuItem Header="Zapisz jako..." x:Name="menuPlikZapiszJako"/>
            </MenuItem>
            <MenuItem Header="Zakończ">
                <MenuItem Header="O programie"/>
            </MenuItem>
        </Menu>
        <TextBox HorizontalAlignment="Stretch" Padding="3" x:Name="txtBox"/>
    </DockPanel>
</Window>
